#include <stdio.h>

int main() {
	seconds_to_days(180000);
	return 0;
}

int seconds_to_days(int s) {	
	int m = s / 60;
	int h = m / 60 ;
	int d = h / 24;
	printf("days:%i\nhours:%i\nminutes:%i\n", d, h, m);
	int resta;	
	if (s >= 86400){
		resta = s - 86400;
		printf("leftover seconds:%i\n", resta);
	}
	return 0;
}
